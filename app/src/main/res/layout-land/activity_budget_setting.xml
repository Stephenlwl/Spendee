<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFF4EA"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".BudgetSettingActivity">

        <!-- Header -->
        <TextView
            android:id="@+id/set_low_budget_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="124dp"
            android:text="@string/set_low_budget_text"
            android:textAlignment="center"
            android:textColor="#C96868"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Back Button -->
        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/teal_700"
            android:text="@string/back_button"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:drawableEnd="@drawable/arrow_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/set_low_budget_text" />
            
        <ImageView
            android:id="@+id/budget_alert_img"
            android:layout_width="269dp"
            android:layout_height="291dp"
            android:layout_marginTop="210dp"
            android:layout_marginEnd="5dp"
            android:contentDescription="@string/budget_alert_img"
            android:src="@drawable/budget_alert_img"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.518"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintTop_toBottomOf="@id/back_button" />

        <EditText
            android:id="@+id/low_amount_budget_alert_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/input_background"
            android:hint="@string/set_low_budget_alert_text"
            android:padding="15dp"
            android:textColor="#000"
            android:textColorHint="#7EACB5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/budget_alert_img" />

        <!-- save Button -->
        <Button
            android:id="@+id/set_alert_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#C96868"
            android:padding="15dp"
            android:text="@string/set_alert_button"
            android:textColor="#FFF4EA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/low_amount_budget_alert_input" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
